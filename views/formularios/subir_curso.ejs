<%-include('../plantillas/headU.ejs')%>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Referencia</th>
                    <th scope="col"></th>
                    <th scope="col">Handle</th>
                  </tr>
                </thead>
                <tbody>
                    <%for(var i = 0; i < data.length; i++){%>
                        <tr>
                            <th scope="row"> <%=(i+1)%> </th>
                            <td><%=data[i].titulo%></td>
                            <td><a href="<%=data[i].referencia%>"  target="_blank" rel="noopener noreferrer" ><%=data[i].titulo%></a></td>
                            <td><%=data[i].des%></td>
                            <td><a href="eliminar-video/<%=data[i].id%>" class="btn btn-danger">Eliminar</a></td>
                        </tr>
                    <%}%>
                </tbody>
              </table>
        </div>
        <div class="col-lg-8">
            <form action="compartir-curso" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-3">
                            <label for="">Titulo</label>
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control" type="text" style="width: 300px;" name="titulo">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-3">
                            <label for="">Referencia</label>
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control" type="text" style="width: 300px;" name="link">
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-3">
                            <label for="">Descripcion</label>
                        </div>
                        <div class="col-lg-6">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="des"></textarea>
                        </div>
                    </div>
                </div>
                <center>
                    <input type="submit" class="btn btn-primary m-1" >
                </center>
            </form>
        </div>
    </div>
</div>
<%-include('../plantillas/fooder.ejs')%>